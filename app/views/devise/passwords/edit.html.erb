<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>เปลี่ยนรหัสผ่าน</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'shared/devisemes' %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "รหัสใหม่", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "ยืนยันรหัสใหม่", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "เปลี่ยนรหัสผ่านของฉัน", class: "btn btn-primary"%>
      </div>
    <% end %>
  </div>
</div>
