<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        เกี่ยวกับที่นี่
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @room do |f| %>

            <div class="row">
              <div class="form-group">
                <label>ชื่อที่พัก</label>
                <%= f.text_field :listing_name, placeholder: "ตั้งชื่อ", class: "form-control", required: true %>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label>รายละเอียดที่พัก</label>
                <%= f.text_area :summary, rows: 5, placeholder: "รายละเอียดและคำบรรยายสั้นๆ เกี่ยวกับที่พัก ห้ามใส่เบอร์มือถือ อีเมล์ หรือ LINE ​ID", class: "form-control", required: true %>
              </div>
            </div>

            <div class="text-center">
              <%= f.submit "บันทึก", class: "btn btn-form" %>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
