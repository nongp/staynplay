<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "ตั้งค่าการชำระเงิน", payment_method_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "ตั้งค่าการรับเงิน", payout_method_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "ตั้งค่าการแจ้งเตือน", notification_settings_path, class: "sidebar-link active" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">ตั้งค่าการแจ้งเตือน</div>
      <div class="panel-body">
        <div class="container">

            <%= form_for :setting do |f| %>

              <div class="row form-group">
                <div class="col-md-6 text-center">
                  
                  <%= f.check_box :enable_email %> อีเมล์
                </div>
                <div class="col-md-6 text-center">

                  <%= f.check_box :enable_sms %> ข้อความ SMS
                </div>
              </div>
              <div class="text-center">
                <%= f.submit "บันทึกการตั้งค่า", class: "btn btn-normal" %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
